<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-800 text-white px-4 md:px-10 py-6">
  <div class="flex flex-wrap gap-6 justify-center md:justify-start">
    <% user.posts.forEach(function(elem) { %>
      <div class="w-36 sm:w-40 md:w-48">
        <div class="w-full h-48 sm:h-52 md:h-56 bg-sky-200 rounded-xl overflow-hidden shadow-lg">
          <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
        </div>
        <h5 class="mt-2 text-sm font-medium text-center md:text-left truncate"><%= elem.title %></h5>
      </div>
    <% }) %>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
