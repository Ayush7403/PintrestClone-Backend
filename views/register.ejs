<%- include('./partials/header.ejs') %>

<div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center px-4 py-8">
  <div class="w-full max-w-md md:w-[27vw] bg-white px-6 md:px-20 py-10 rounded-3xl shadow-lg">
    <h1 class="text-2xl md:text-3xl text-center font-semibold text-zinc-700 leading-tight capitalize mb-4">
      Want to see more? Register on Pinterest
    </h1>

    <form action="/register" method="post" class="space-y-3">
      <input class="border-2 rounded-xl w-full px-3 py-2" type="email" name="email" placeholder="Email" required />
      <input class="border-2 rounded-xl w-full px-3 py-2" type="text" name="name" placeholder="Name" required />
      <input class="border-2 rounded-xl w-full px-3 py-2" type="text" name="username" placeholder="Username" required />
      <input class="border-2 rounded-xl w-full px-3 py-2" type="password" name="password" placeholder="Password" required />
      <input class="w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer hover:bg-red-700 transition" type="submit" value="Create New Account" />
    </form>

    <p class="text-xs font-semibold text-zinc-700 mt-6 text-center">
      By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy Notice.
    </p>

    <a class="block mt-6 text-sm font-semibold text-zinc-700 text-center hover:underline" href="/">
      Already have an account? Login here.
    </a>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
